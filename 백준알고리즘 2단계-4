import java.util.Scanner;
public class Main {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int x = sc.nextInt();
		int y = sc.nextInt();
		int result = 0;
		if (y > 0) result++;
		if (y < 0) result+=3;
		if (x * y < 0) result++;		
		System.out.println(result);
		sc.close();
	}
}
